<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <Preference
        android:fragment="com.aurora.adroid.ui.fragment.preference.DownloaderFragment"
        app:icon="@drawable/ic_downloads"
        app:layout="@layout/item_preference"
        app:title="@string/pref_downloads" />

    <Preference
        android:fragment="com.aurora.adroid.ui.fragment.preference.InstallationFragment"
        app:icon="@drawable/ic_installation"
        app:layout="@layout/item_preference"
        app:title="@string/pref_installations" />

    <Preference
        android:fragment="com.aurora.adroid.ui.fragment.preference.NetworkFragment"
        app:icon="@drawable/ic_network"
        app:layout="@layout/item_preference"
        app:title="@string/pref_network" />

    <Preference
        android:fragment="com.aurora.adroid.ui.fragment.preference.UIFragment"
        app:icon="@drawable/ic_ui"
        app:layout="@layout/item_preference"
        app:title="@string/pref_ui" />

    <Preference
        android:fragment="com.aurora.adroid.ui.fragment.preference.UpdatesFragment"
        app:icon="@drawable/ic_update"
        app:layout="@layout/item_preference"
        app:title="@string/pref_updates_title" />
</androidx.preference.PreferenceScreen>
