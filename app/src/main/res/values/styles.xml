<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorSurface">@color/colorSecondaryVariant</item>
        <item name="android:strokeColor">@color/colorGreyLight</item>
        <item name="android:windowBackground">@color/colorWindowBackground</item>
        <item name="android:navigationBarColor">@color/colorBlack</item>
        <item name="android:statusBarColor">@color/colorBlack</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="chipStyle">@style/Widget.Aurora.FilterChip</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorDarkPrimary</item>
        <item name="colorPrimaryVariant">@color/colorDarkPrimaryVariant</item>
        <item name="colorSecondary">@color/colorDarkSecondary</item>
        <item name="colorSecondaryVariant">@color/colorDarkSecondaryVariant</item>
        <item name="colorSurface">@color/colorDarkSecondaryVariant</item>
        <item name="android:strokeColor">@color/colorGreyLight</item>
        <item name="android:windowBackground">@color/colorDarkWindowBackground</item>
        <item name="android:colorBackground">@color/colorDarkBackground</item>
        <item name="chipStyle">@style/Widget.Aurora.FilterChip</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:windowActivityTransitions">true</item>

    </style>

    <style name="AppTheme.Darker" parent="AppTheme.Dark">
        <item name="colorPrimary">@color/colorBluePrimary</item>
        <item name="colorPrimaryDark">@color/colorBluePrimaryDark</item>
        <item name="colorPrimaryVariant">@color/colorBluePrimaryVariant</item>
        <item name="colorSecondary">@color/colorBlueSecondary</item>
        <item name="colorSecondaryVariant">@color/colorBlueSecondaryVariant</item>
        <item name="colorSurface">@color/colorBlueSecondaryVariant</item>
        <item name="android:windowBackground">@color/colorBlueWindowBackground</item>
        <item name="android:colorBackground">@color/colorBlueBackground</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
    </style>

    <style name="AppTheme.Black" parent="AppTheme.Dark">
        <item name="colorPrimary">@color/colorBlackAccent</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="colorSecondary">@color/colorBlackAccent</item>
        <item name="colorSecondaryVariant">@color/colorBlack</item>
        <item name="colorSurface">@color/colorBlack</item>
        <item name="android:strokeColor">@color/colorGreyLight</item>
        <item name="android:windowBackground">@color/colorBlack</item>
        <item name="android:colorBackground">@color/colorBlack</item>
    </style>
</resources>