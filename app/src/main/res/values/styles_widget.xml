<resources>

    <!--Button Style-->
    <style name="Widget.Button.Aurora.Menu" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">?android:textAppearanceListItem</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:paddingStart">@dimen/margin_normal</item>
        <item name="android:paddingEnd">@dimen/margin_normal</item>
        <item name="iconPadding">@dimen/margin_normal</item>
        <item name="cornerRadius">0dp</item>
        <item name="rippleColor">@color/colorScrim</item>
    </style>

    <!-- Toolbar & AppBar -->
    <style name="AppTheme.PopupTheme" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="AppTheme.PopupTheme.Dark" parent="ThemeOverlay.MaterialComponents.Dark" />

    <style name="Aurora.MaterialComponents.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="titleTextAppearance">@style/TextAppearance.Aurora.Toolbar.Title</item>
        <item name="subtitleTextAppearance">@style/TextAppearance.Aurora.Toolbar.SubTitle</item>
        <item name="popupTheme">@style/AppTheme.PopupTheme</item>
    </style>

    <style name="Aurora.MaterialComponents.Toolbar.Dark" parent="Aurora.MaterialComponents.Toolbar">
        <item name="popupTheme">@style/AppTheme.PopupTheme.Dark</item>
    </style>

    <!--CardView-->
    <style name="Aurora.MaterialComponents.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="rippleColor">@color/colorScrimAccent</item>
    </style>

    <style name="Aurora.MaterialComponents.CardView.Dark" parent="Aurora.MaterialComponents.CardView">
        <item name="rippleColor">@color/colorDarkRipple</item>
        <item name="cardBackgroundColor">?colorSecondaryVariant</item>
    </style>

    <style name="Aurora.MaterialComponents.CardView.Black" parent="Aurora.MaterialComponents.CardView">
        <item name="rippleColor">@color/colorGreyDarker</item>
        <item name="cardBackgroundColor">?colorSecondaryVariant</item>
    </style>

    <!-- Chips -->
    <style name="Widget.MaterialComponents.Chip.Info" parent="@style/Widget.MaterialComponents.Chip.Action">
        <item name="iconStartPadding">2dp</item>
        <item name="enforceTextAppearance">true</item>
        <item name="rippleColor">@color/colorTransparent</item>
        <item name="chipBackgroundColor">?android:attr/colorBackground</item>
        <item name="chipEndPadding">4dp</item>
        <item name="chipStartPadding">4dp</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@color/colorGreyLight</item>
        <item name="android:textAppearance">@style/TextAppearance.Aurora.Filter</item>
    </style>

    <style name="Widget.Aurora.FilterChip" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="android:textAppearance">@style/TextAppearance.Aurora.Filter</item>
        <item name="checkedIcon">@drawable/ic_chip_checked</item>
        <item name="chipBackgroundColor">?android:colorBackground</item>
        <item name="chipStrokeColor">?android:colorAccent</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipEndPadding">8dp</item>
        <item name="chipStartPadding">8dp</item>
        <item name="chipIconSize">16dp</item>
        <item name="rippleColor">@color/colorScrimAccent</item>
    </style>

    <!-- Bottom Navigation -->
    <style name="Widget.Aurora.BottomNav" parent="@style/Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/color_selector</item>
        <item name="itemTextColor">@color/color_selector</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <!-- BottomSheet -->

</resources>